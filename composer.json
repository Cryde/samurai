{
    "name": "raphhh/samurai",
    "description": "PHP scaffolding tool - creates for you all the files you need to start a new project",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "RaphaÃ«l Lefebvre",
            "email": "raphael@raphaellefebvre.be"
        }
    ],
    "keywords": [
        "bootstrap",
        "scaffolding tool",
        "composer"
    ],
    "homepage": "https://github.com/Raphhh/samurai",
    "autoload": {
        "psr-4": {
            "Samurai\\": [
                "src/",
                "tests/"
            ]
        }
    },
    "require": {
        "php": ">=5.4",
        "symfony/console": "~2.6",
        "raphhh/trex-cli": "dev-master#05eddd277294c5741ca790971709e1b9e5a8283b",
        "pimple/pimple": "~3.0",
        "raphhh/puppy-config": "~1.0",
        "kzykhys/git": "0.1.*",
        "icanboogie/inflector": "~1.3",
        "raphhh/balloon": "~1.1",
        "rap2hpoutre/similar-text-finder": "0.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": "@stable",
        "symfony/event-dispatcher": "~2.6"
    },
    "bin": [
        "samurai"
    ],
    "scripts": {
        "post-install-cmd": [
            "samurai module install"
        ]
    }
}
